<div class='mx-auto container mt-5 mt-md-0'>
 
    

 <div class="container py-5 h-100">
  
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-10">

        <div class="card">
          <div class="card-header p-3">
            <h5 class="mb-0"><i ></i> List of Users </h5>
          </div>
       
            <a class='btn btn-warning' href='/admin/addUser'>Add New User</a>

  &nbsp;  &nbsp;
  
          <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; width: 100%; height:100;">
             
            <table class="table mb-0">
              <thead>
                <tr>
                   <th scope="col">Image</th>
                  <th scope="col">Username</th>
                  <th scope="col">Fullname</th>
                  <th scope="col">Admin</th>
                  <th scope="col">Email</th>
                  <th scope="col">Delete</th>
                  <th scope="col">View</th>
                </tr>
              </thead>
              <tbody>
          <tr class="fw-normal">
     {{#each users}}
                  <th>
                         <span class="ms-2"  data-value='{{this._id}}'><center><img class='rounded-circle float-right' src='profilepictures/{{profilepic}}' height='30px' width='30px'></center></span>
                  </th>
                  <td class="align-middle">
                         <span class="ms-2"  data-value='{{this._id}}'>{{this.username}}</span>
                  </td>
                   <td class="align-middle">
                    <span>{{this.fullname}}</span>
                  </td>
                  <td class="align-middle">
                    <span>{{this.ifAdmin}}</span>
                  </td>
                   <td class="align-middle">
                    <span>{{this.email}}</span>
                  </td>
            


                 <td class="align-middle">
                  <form action="/admin/deleteUser/{{this.id}}" method="post">
								       <center><button type="submit" class="btn btn-danger">Delete</button></center>
							    </form>
                  </td>

                 <td class="align-middle">
                  <form action="/admin/viewUser/{{this.id}}" method="get">
								       <center><button type="submit" class="btn btn-success">View</button></center>
                       
							    </form>
                  </td>

                 
                  
  
                </tr>
       {{/each}}
              </tbody>
            </table>

          </div>

        </div>

      </div>
    </div>

  </div> 
