<div class='mx-auto container mt-5 mt-md-0'>
 <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-10">

        <div class="card">
          <div class="card-header p-3">
            <h5 class="mb-0"><i ></i> List of Tasks </h5>
          </div>
          <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative; height: 100%">

            <table class="table mb-0">
              <thead>
                <tr>
                  
                  <th scope="col">Creator</th>
                  <th scope="col">Reference ID</th>
                  <th scope="col">Title</th>
                  <th scope="col">Status</th>
                  <th scope="col">Delete</th>
                  <th scope="col">View</th>
                  <th scope="col">Completion</th>
                  
                </tr>
              </thead>
              <tbody>
          <tr class="fw-normal">
     {{#each tasks}}
                   <td class="align-middle">
                        
                         <span class="ms-2"  data-value='{{this._id}}'>{{this.user.username}}</span>
                  </td>
                  
                  <td class="align-middle">
                    <span>{{this._id}}</span>
                  </td>
                   <td class="align-middle">
                    <span>{{this.title}}</span>
                  </td>
  
                  <td class="align-middle">
                   <h6 class="mb-0"><span class="badge bg-warning">{{this.status}}</span></h6>
                  </td>
                   <td class="align-middle">
                  <form action="/admin/deleteTask/{{this.id}}" method="post">
								       <center><button type="submit" class="btn btn-danger">Delete</button></center>
							    </form>
                  </td>

                 <td class="align-middle">
                  <form action="/admin/viewTask/{{this.id}}" method="get">
								       <center><button type="submit" class="btn btn-success">View</button></center>
							    </form>
                  </td>

                    <td class="align-middle">
                  <form action="/admin/changeStatusCompleted/{{this.id}}" method="post">
								       <center><button type="submit" class="btn btn-info">Completed</button></center>
							    </form>
                  &nbsp;
                     <form action="/admin/changeStatusIncomplete/{{this.id}}" method="post">
								       <center><button type="submit" class="btn btn-primary">Incomplete</button></center>
							    </form>
                  </td>
              
                </tr>
       {{/each}}
              </tbody>
            </table>

          </div>

        </div>

      </div>
    </div>

  </div> 
