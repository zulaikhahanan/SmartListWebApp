 <div class="content">
        <div class="container">
          <div class="row">
            <div class="col-md-6 order-md-2">
              <img src="images/undraw_file_sync_ot38.svg" alt="Image" class="img-fluid">
            </div>
            <div class="col-md-6 contents">
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <div class="mb-4">
                  <h3>Sign Up with <strong>SmartList</strong> </h3>
                  <p class="mb-4">Lets Organize Our Task Together!</p>
                </div>
                 <div id="alert" class="alert alert-danger alert-dismissible fade show" role="alert">
                <span id="msg">{{error}}</span>
                
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
                <form action="/register" method="POST" autocomplete="off" novalidate>

                  <div id="acctformcont" class="form-group first">
                    <label for="username">Username</label>
                    <input name="username" class="form-control validate" type="text" id="username"  placeholder="User Name"  minlength="2" maxlength="15" required>
                     <div class="invalid-feedback">This field must be 2 to 15 characters long</div>
                  </div>

                  <div class="form-group last mb-4">
                    <label for="fullname">Fullname</label>
                    <input name="fullname" class="form-control validate" type="text" id="fullname"  placeholder="Full Name " minlength="2" maxlength="15" required> 
                    <div class="invalid-feedback">This field must be 2 to 15 characters long</div>
                  </div>
    
                  <div class="form-group last mb-4">
                    <label for="phoneNumber">Phone Number</label>
                     <input name="phonenumber" class="form-control validate" type="text" id="phonenumber" placeholder="Phone Number" required>
                    <div class="invalid-feedback">Please Insert The Right Phone Number Format </div>
                  </div>
    
                  <div class="form-group last mb-4">
                    <label for="email">Email</label>
                    <input name="email" class="form-control validate" type="email" id="email"  placeholder="Email "required>
                    <div class="invalid-feedback">Please Enter a Valid Email</div>
                    
                  </div>


                  <div class="form-group last mb-4">
                    <label for="instituteName">Institution Name</label>
                    <input name="instituteName" class="form-control validate" type="text" id="instituteName"  placeholder="Institution Name"required>
                    <div class="invalid-feedback">Please Enter a Valid Institution Name</div>
                    
                  </div>
    
                 <div class="form-group last mb-4">
                    <label for="address">Address</label>
                    <input name="address" class="form-control validate" type="text" id="address"  placeholder="Address"required>
                    <div class="invalid-feedback">Please Enter a Valid Address</div>
                    
                  </div>
                  
                
                  
                  <div class="form-group last mb-4">
                    <label for="pw1">Password</label>
                     <input name="pw1" class="form-control validate" type="password" id="pw1" placeholder=" Password"  minlength="3" maxlength="16" required>
                   
                    <div class="invalid-feedback">Password must be 3 to 16 characters long</div>
                    
                  </div>

                  <div class="form-group last mb-4">
                    <label for="pw2"> Confirm Password</label>
                     <input name="pw2" class="form-control validate" type="password" id="pw2" placeholder=" Confirm Password" minlength="3" maxlength="16" required>
                      <div class="invalid-feedback">Password does not match</div>          
                  </div>

                  &nbsp; 
                    <button type='submit' class="btn text-white btn-block btn-primary">Sign Up</button>
                  </form>
                  &nbsp;   &nbsp; 

                 <div class='row mx-3 my-3 d-flex align-items-center'>
                   <span class='text-center'>Have an account? <a class='normala' href='/'>Login</a> </span>
                 </div>
                </div>
              </div>    
            </div>
          </div>
        </div>
      </div>





<script>

    $(document).ready( function(){

        if( $("#msg").text() == "") 
        {
            $("#alert").hide()
        }
        // First Name Validation
        $(".validate").keyup(function(){
            if (this.checkValidity() === false) {
                $(this).addClass("is-invalid");
            }
            else{
                $(this).removeClass("is-invalid");
                $(this).addClass("is-valid");
            }
        })

        $("#pw1").keyup(function(){
            if (this.checkValidity() === false) {
                $(this).addClass("is-invalid");
            }
            else{
                $(this).removeClass("is-invalid");
                $(this).addClass("is-valid");
            }
        })

        $("#pw1").change(function(){
            if ( $("#pw2").val() !== $("#pw1").val() ) {
                $("#pw2").addClass("is-invalid");
            }
            else{
                $("#pw2").removeClass("is-invalid");
                $("#pw2").addClass("is-valid");
            }
        })

        $("#pw2").keyup(function(){
            if ( $(this).val() !== $("#pw1").val() ) {
                $(this).addClass("is-invalid");
            }
            else{
                $(this).removeClass("is-invalid");
                $(this).addClass("is-valid");
            }
        })




        function checkForm(){
            inputs = $("input")
            var valid = true;
            
            for(i=0; i<inputs.length; i++)
            {
                if(inputs[i].classList.contains("is-invalid"))
                    valid = false;
            }

        }

        $("form").submit( function(){

            // validate fname, lname, email, number
            inputs = $(".validate")

            for(i=0; i<inputs.length; i++)
            {
                if (inputs[i].checkValidity() === false) {
                    $(inputs[i]).addClass("is-invalid");
                }
                else{
                    $(inputs[i]).removeClass("is-invalid");
                    $(inputs[i]).addClass("is-valid");
                }
            }

        
            // validate password
            if ( $("#pw2").val() !== $("#pw1").val() ) {
                $("#pw2").addClass("is-invalid");
            }
            else{
                $("#pw2").removeClass("is-invalid");
                $("#pw2").addClass("is-valid");
            }

            validate = $("input")
            var i = 0
            var valid = true;
            while(i<validate.length && valid)
            {
                if (validate[i].classList.contains("is-invalid")) {
                   valid = false
                }
                i++;
            }
            return valid

        })
    })
    
</script>